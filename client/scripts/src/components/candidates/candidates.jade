.row
    .col-md-9.col-md-offset-3
        a.btn.btn-primary(href="/app/candidates/new") Create
hr
.row
    .col-md-3
        ul.list-unstyled(data-bind="foreach: candidates")
            li: a(href="/app/candidates/:id", data-bind="text: firstname, click: $parent.select")
    .col-md-9
        table.table.table-striped
            thead
                tr
                    th First Name
                    th Last Name
                    th E-mail
                    th Telephone
                    th Source
                    th Applications
                    th
            tbody(data-bind="foreach: candidates")
                tr
                    td(data-bind="text: firstname")
                    td(data-bind="text: lastname")
                    td(data-bind="text: email")
                    td(data-bind="text: telephone")
                    td(data-bind="text: source")
                    td: ul.list-unstyled(data-bind="foreach: applications")
                        li(data-bind="text: opening.title")

                    td
                        a(href="", data-bind="click: $parent.startAssign, css: {hidden: $parent.selected() == $data} ") Create application
                        div(data-bind="if: $parent.selected() == $data")
                            select(data-bind="options: $parent.openings, optionsText: 'title', optionsValue: '_id', value: $parent.opening")
                            a(data-bind="click: $parent.cancelAssign") Cancel
                            a(data-bind="click: $parent.saveAssign") Save
